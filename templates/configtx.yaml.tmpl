
Profiles:
    OrdererGenesis:
        Policies: &DefaultPolicies
            Readers:
                Type: ImplicitMeta
                Rule: "ANY Readers"
            Writers:
                Type: ImplicitMeta
                Rule: "ANY Writers"
            Admins:
                Type: ImplicitMeta
                Rule: "MAJORITY Admins"
        Capabilities:
            V1_3: true
        Orderer:
            OrdererType: {% if ordererorg.type %}{{ ordererorg.type }}{%else %}solo{% endif %}
            Addresses:
            {%- for orderer in ordererorg.orderers %}
                - {{ orderer.name }}.{{ ordererorg.domain }}:7050
            {%- endfor %}
            {%- if ordererorg.type == "etcdraft" %}
            etcdRaft:
              Consenters:
                {%- for orderer in ordererorg.orderers %}
                - Host: {{ orderer.name }}.{{ ordererorg.domain }}
                  Port: 7050
                  ClientTLSCert: crypto-config/ordererOrganizations/{{ ordererorg.domain }}/orderers/{{ orderer.name }}.{{ ordererorg.domain }}/tls/server.crt
                  ServerTLSCert: crypto-config/ordererOrganizations/{{ ordererorg.domain }}/orderers/{{ orderer.name }}.{{ ordererorg.domain }}/tls/server.crt
                {%- endfor %}
            {% elif ordererorg.type == "kafka" %}
            Kafka:
                # Brokers: A list of Kafka brokers to which the orderer connects
                # NOTE: Use IP:port notation
                Brokers:
                {%- for kafka in kafkas %}
                    - {{ kafka.name }}:{{ kafka.port }}
                {%- endfor %}
            {% endif %}
            BatchTimeout: 100ms
            BatchSize:
                MaxMessageCount: 1000
                AbsoluteMaxBytes: 98 MB
                PreferredMaxBytes: 1024 KB
            Policies:
                <<: *DefaultPolicies
            Capabilities:
                V1_1: true
            Organizations:
                -
                    Name: {{ ordererorg.mspid }}
                    ID: {{ ordererorg.mspid }}
                    MSPDir: crypto-config/ordererOrganizations/{{ ordererorg.domain }}/msp
                    Policies:
                        Readers:
                            Type: Signature
                            Rule: "OR('{{ ordererorg.mspid }}.member')"
                        Writers:
                            Type: Signature
                            Rule: "OR('{{ ordererorg.mspid }}.member')"
                        Admins:
                            Type: Signature
                            Rule: "OR('{{ ordererorg.mspid }}.admin')"
        Consortiums:
            MyConsortium:
                Organizations:
                {%- for org in orgs %}
                    - &{{ org.mspid }}
                        Name: {{ org.mspid }}
                        ID: {{ org.mspid }}
                        MSPDir: crypto-config/peerOrganizations/{{ org.domain }}/msp
                        AnchorPeers:
                        {%- for peer in org.peers %}
                            - Host: {{ peer.name }}.{{ org.domain }}
                              Port: 7051
                        {%- endfor %}
                        Policies:
                            Readers:
                                Type: Signature
                                Rule: "OR('{{ org.mspid }}.admin', '{{ org.mspid }}.peer', '{{ org.mspid }}.client')"
                            Writers:
                                Type: Signature
                                Rule: "OR('{{ org.mspid }}.admin', '{{ org.mspid }}.client')"
                            Admins:
                                Type: Signature
                                Rule: "OR('{{ org.mspid }}.admin')"
                            Endorsement:
                                Type: Signature
                                Rule: "OR('{{ org.mspid }}.peer')"
                {%- endfor %}
    MyChannel:
        Consortium: MyConsortium
        Policies:
            <<: *DefaultPolicies
        Capabilities:
            V2_0: true
        Application:
            Policies:
                Readers:
                    Type: ImplicitMeta
                    Rule: "ANY Readers"
                Writers:
                    Type: ImplicitMeta
                    Rule: "ANY Writers"
                Admins:
                    Type: ImplicitMeta
                    Rule: "MAJORITY Admins"
                LifecycleEndorsement:
                    Type: ImplicitMeta
                    Rule: "MAJORITY Endorsement"
                Endorsement:
                    Type: ImplicitMeta
                    Rule: "MAJORITY Endorsement"
            Organizations:
            {%- for org in orgs %}
                - *{{ org.mspid}}
            {%- endfor %}
            Capabilities:
                #V2_0: true
                V1_3: true
